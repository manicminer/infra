LOG_FILE = '/var/log/pgadmin/pgadmin4.log'
SQLITE_PATH = '/var/lib/pgadmin/pgadmin4.db'
SESSION_DB_PATH = '/var/lib/pgadmin/sessions'
STORAGE_DIR = '/var/lib/pgadmin/storage'

{% if pgadmin is defined and pgadmin.client_id is defined %}
AUTHENTICATION_SOURCES = ['oauth2', 'internal']

OAUTH2_AUTO_CREATE_USER = False
OAUTH2_CONFIG = [{
    'OAUTH2_NAME' : 'authentik',
    'OAUTH2_DISPLAY_NAME' : 'Authentik',
    'OAUTH2_CLIENT_ID' : '{{ pgadmin.client_id }}',
    'OAUTH2_CLIENT_SECRET' : '{{ pgadmin.client_secret }}',
    'OAUTH2_TOKEN_URL' : '{{ authentik_url }}/application/o/token/',
    'OAUTH2_AUTHORIZATION_URL' : '{{ authentik_url }}/application/o/authorize/',
    'OAUTH2_API_BASE_URL' : '{{ authentik_url }}/',
    'OAUTH2_USERINFO_ENDPOINT' : '{{ authentik_url }}/application/o/userinfo/',
    'OAUTH2_SCOPE' : 'openid email profile',
    'OAUTH2_ICON' : 'fa-user-lock',
    'OAUTH2_BUTTON_COLOR' : '#fd4b2d'
}]
{% else %}
AUTHENTICATION_SOURCES = ['internal']
{% endif %}
