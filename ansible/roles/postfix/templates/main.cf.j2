alias_database = hash:/etc/aliases
alias_maps = hash:/etc/aliases
append_dot_mydomain = no
biff = no
compatibility_level = 3.6
inet_interfaces = all
inet_protocols = all
mailbox_size_limit = 0
mydestination = {{ ansible_facts['fqdn'] }}, $myhostname, localhost.{{ ansible_facts['domain'] }}, localhost
myhostname = {{ ansible_facts['fqdn'] }}
mynetworks = 127.0.0.0/8 [::ffff:127.0.0.0]/104 [::1]/128
myorigin = /etc/mailname
readme_directory = no
recipient_delimiter = +
relayhost = [{{ postfix['relay_host'] }}]:{{ postfix['relay_port'] }}
smtp_sasl_auth_enable = yes
smtp_sasl_password_maps = hash:/etc/postfix/sasl_passwd
smtp_sasl_security_options = noanonymous
smtp_tls_CApath=/etc/ssl/certs
smtp_tls_note_starttls_offer = yes
smtp_tls_security_level = secure
smtp_tls_session_cache_database = btree:${data_directory}/smtp_scache
smtp_use_tls = yes
smtpd_banner = $myhostname ESMTP $mail_name
smtpd_relay_restrictions = permit_mynetworks permit_sasl_authenticated defer_unauth_destination
smtpd_tls_cert_file=/etc/letsencrypt/live/{{ ansible_facts['domain'] }}/fullchain.pem
smtpd_tls_key_file=/etc/letsencrypt/live/{{ ansible_facts['domain'] }}/privkey.pem
smtpd_tls_security_level=may
